<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:padding="@dimen/activity_vertical_margin"
              android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/controlSwitch"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView
                android:padding="8dp"
                android:tint="@color/colorAccent"
                android:src="@drawable/ic_power_settings_new_black_24dp"
                android:layout_width="65dp"
                android:layout_height="100dp" android:id="@+id/controlSwitchImg"/>

        <TextView
                android:text="Control Switches"
                android:layout_toRightOf="@id/controlSwitchImg"
                android:layout_centerVertical="true"
                android:textSize="@dimen/lg"
                android:layout_width="wrap_content"
                android:drawablePadding="@dimen/md"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_height="wrap_content"/>


    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/sensorData"
            android:layout_width="match_parent" android:layout_height="wrap_content">

        <ImageView
                android:padding="8dp"
                android:tint="@color/colorAccent"
                android:layout_width="65dp"
                android:src="@drawable/ic_insert_chart_black_24dp"
                android:layout_height="100dp" android:id="@+id/sensorDataImg"/>

        <TextView
                android:text="Irrigation Monitoring"
                android:layout_toRightOf="@id/sensorDataImg"
                android:layout_centerVertical="true"
                android:textSize="@dimen/lg"
                android:drawablePadding="@dimen/md"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/forecastData"
            android:layout_width="match_parent" android:layout_height="wrap_content">

        <ImageView
                android:padding="8dp"
                android:tint="@color/colorAccent"
                android:layout_width="65dp"
                android:src="@drawable/ic_wb_sunny_black_24dp"
                android:layout_height="100dp" android:id="@+id/forecastImg"/>

        <TextView
                android:text="Forecast"
                android:layout_toRightOf="@id/forecastImg"
                android:layout_centerVertical="true"
                android:textSize="@dimen/lg"
                android:drawablePadding="@dimen/md"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>